<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:orientation="vertical"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:padding="20dp"
            android:textSize="22sp"
            android:gravity="center"
            android:textColor="@color/light_grey"
            android:background="@color/dark_blue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/amount_payable"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Payment Options"
            android:padding="20dp"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <!-- Item 1 -->
            <LinearLayout
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_enter_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leftTextView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="TimeToken"/>

                <TextView
                    android:id="@+id/btn_pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:padding="5dp"
                    android:textColor="@color/dark_blue"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="PAY NOW"/>
            </LinearLayout>

            <LinearLayout
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_enter_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leftTextView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amazon Pay"/>

                <TextView
                    android:id="@+id/rightTextView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Link"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_enter_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leftTextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Paytm wallet"/>

                <TextView
                    android:id="@+id/rightTextView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Link"/>
            </LinearLayout>
            <LinearLayout
                android:padding="10dp"
                android:layout_marginVertical="5dp"
                android:background="@drawable/bg_enter_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/leftTextView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mobikwik"/>

                <TextView
                    android:id="@+id/rightTextView4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="Link"/>
            </LinearLayout>

        </LinearLayout>




